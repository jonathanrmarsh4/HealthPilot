# HealthPilot Environment Configuration

# ==============================================================================
# FEATURE FLAGS - Control AI/ML Feature Rollout
# ==============================================================================
# Master Override: Disables ALL AI features when enabled (for debugging/testing)
# BASELINE_MODE_ENABLED=false

# Individual AI Feature Flags (only work when BASELINE_MODE is false)
# AI_MEAL_FILTERS_ENABLED=false
# AI_MEAL_RANKING_ENABLED=false
# MEAL_GOAL_FILTER_ENABLED=false
# MEAL_PREFERENCE_WEIGHTING_ENABLED=false
# BIOMARKER_FILTER_ENABLED=false
# AI_WORKOUT_SELECTION_ENABLED=false
# DAILY_AI_TRAINING_GENERATOR_ENABLED=true

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# RapidAPI Key (for recipe search - optional)
# RAPIDAPI_KEY=your_rapidapi_key_here

# Stripe Keys (for payments)
# TESTING_STRIPE_SECRET_KEY=your_stripe_secret_key
# TESTING_VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key

# ==============================================================================
# DATABASE
# ==============================================================================
# PostgreSQL connection (auto-configured by Replit)
# DATABASE_URL=postgresql://...

# ==============================================================================
# SYSTEM TOGGLES
# ==============================================================================
# Include symptoms in daily insights analysis
# INCLUDE_SYMPTOMS_IN_INSIGHTS=true
